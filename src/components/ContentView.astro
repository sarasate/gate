---
const {
  data,
  tags,
  data: { info },
} = Astro.props;
const basePath = data.servers?.[0].url;
---

<div class="">
  {
    tags.map((tag: any) => {
      return (
        <div class="">
          <div class="h1 uppercase">{tag.name}</div>
          {tag.operations.map((operation: any) => {
            return (
              <div class="flex">
                <div class="flex-1">
                  <div class="font-bold text-xl" id={operation.operationId}>
                    {operation.summary}
                  </div>
                  <div class="m-4">
                    <span
                      class={`badge badge-lg uppercase ${operation.method}`}
                    >
                      {operation.method}
                    </span>
                    <span>{operation.path}</span>
                    <div class="my-4">{operation.description}</div>
                    <div>
                      {operation.parameters?.some(
                        (param) => param.in === "query"
                      ) && <h2 class="font-bold">Query Params</h2>}
                      {operation.parameters
                        ?.filter((param) => param.in === "query")
                        .map((param) => {
                          return (
                            <div class="py-2">
                              <div>
                                <span class="font-bold">{param.name}</span>{" "}
                                <span>{param.type}</span>
                                <span>{param.schema?.type}</span>
                              </div>

                              <div>{param.description}</div>
                            </div>
                          );
                        })}
                      {operation.responses && operation.responses[200] && (
                        <h2 class="font-bold">Responses</h2>
                      )}
                      {operation.responses && operation.responses[200] && (
                        <div class="py-2">
                          <div>
                            <span class="font-bold">200</span>{" "}
                            <span>{operation.responses[200].description}</span>
                          </div>
                        </div>
                      )}
                      {operation.responses &&
                        operation.responses["default"] && (
                          <div class="py-2">
                            <div>
                              <span class="font-bold">default</span>{" "}
                              <span>
                                {operation.responses["default"].description}
                              </span>
                            </div>
                          </div>
                        )}
                    </div>
                  </div>
                </div>
                <div class="flex-1">
                  <div class="card shadow-lg">
                    <div class="card-body">
                      <div>Request sample: </div>
                      <div>
                        curl --request{" "}
                        <span class={operation.method}>
                          {operation.method.toUpperCase()}
                        </span>{" "}
                        --url '{basePath}
                        {operation.path}' --header 'ContentType:
                        application/json'
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            );
          })}
          <div class="divider" />
        </div>
      );
    })
  }
</div>

<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer utilities {
    .get {
      @apply text-primary;
    }
    .post,
    .put {
      @apply text-success;
    }
    .delete {
      @apply text-error;
    }
    .patch {
      @apply text-warning;
    }
    .options {
      @apply text-info;
    }
    .head {
      @apply text-secondary;
    }
  }
</style>
